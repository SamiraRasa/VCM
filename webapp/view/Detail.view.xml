<mvc:View
    displayBlock="true"
    controllerName="phoron.prototype.controller.Detail"
    height="100%"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>
    <f:DynamicPage toggleHeaderOnTitleClick="false">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{detailView>/document}" />
                </f:heading>
                <f:expandedContent>
                    <Label text="{detailView>/documentType}" />
                </f:expandedContent>
                <f:snappedContent>
                    <Label text="{detailView>/documentType}" />
                </f:snappedContent>
                <f:snappedTitleOnMobile>
                    <Title text="{detailView>/documentType}" />
                </f:snappedTitleOnMobile>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <ObjectAttribute
                    title="Source System"
                    text="{detailView>/sourceSystem}"
                />
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <IconTabBar
                expanded="true"
                class="sapUiResponsiveContentPadding"
            >
                <items>
                    <IconTabFilter
                        text="Document Flow"
                        key="docFlow"
                    >
                        <t:TreeTable
                            id="treeTable"
                            rows="{path:'localModel>/DocumentTree', parameters: {arrayNames:['Documents']}}"
                            selectionMode="Single"
                            selectionBehavior="Row"
                            enableSelectAll="false"
                            rowSelectionChange="onListItemPress"
                            rowsUpdated="onRowsUpdated"
                            ariaLabelledBy="title"
                        >
                            <t:extension>
                                <OverflowToolbar style="Clear">
                                    <Title
                                        id="title"
                                        text="Document Flow"
                                    />
                                    <ToolbarSpacer />
                                </OverflowToolbar>
                            </t:extension>
                            <t:columns>
                                <t:Column width="13rem">
                                    <Label text="Document Type" />
                                    <t:template>
                                        <Text
                                            text="{localModel>ObjectType}"
                                            wrapping="false"
                                        />
                                    </t:template>
                                </t:Column>
                                <t:Column width="9rem">
                                    <Label text="Document ID" />
                                    <t:template>
                                        <Text
                                            text="{localModel>Document}"
                                            wrapping="false"
                                        />
                                    </t:template>
                                </t:Column>
                                <t:Column width="11rem">
                                    <Label text="Source System" />
                                    <t:template>
                                        <Text
                                            text="{localModel>SourceSystem}"
                                            wrapping="false"
                                        />
                                    </t:template>
                                </t:Column>
                            </t:columns>
                        </t:TreeTable>
                    </IconTabFilter>
                    <IconTabFilter
                        text="Process Flow"
                        key="procFlow"
                    >
                        <core:Fragment
                            fragmentName="phoron.prototype.view.ProcessFlow"
                            type="XML"
                        />
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    type="Accept"
                    text="Accept"
                />
                <Button
                    type="Reject"
                    text="Reject"
                />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
